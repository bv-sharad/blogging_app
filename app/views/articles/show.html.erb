<div class="article form-style-9">
<h1><%= @article.title %></h1>

<div class="art_text"><%= @article.body %></div>
</div>

<% if current_name == @article.user || current_user.is_admin%>
<div class="option form-style-9">
<ul>
	<li><%= link_to "Edit", edit_article_path(@article) %></li>
	<li><%= link_to "Destroy", article_path(@article),data: {
		method: :delete} %></li>
</ul>
</div>
<%end%>

<div class="form-style-9">
<h2>Comments</h2>
<%= render @article.comments %>
<div>
	<% if current_user %>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>
<%end%>
